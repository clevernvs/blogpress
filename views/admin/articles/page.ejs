<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../partials/head'); -%>
</head>

<body>

  <%- include('../../partials/home-navbar'); -%>

  <div class="container">

    <!-- listar todos os artigos -->
    <% result.articles.rows.forEach(article => { %>
    <div class="row">
      <div class="col s12 m12 l12">
        <div class="card-panel">
          <div class="card-content">
            <span class="card-title"><%= article.title %></span>
            <!-- <p><a href="#" class="waves-effect waves-light btn-small">Ler artigo</a></p>       -->
            <div class="card-action">
              <a href="<%= article.slug %>">Ler artigo</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% }) %>

    <!-- Páginação -->
    <div class="row">
      <div class="col s12 m12 l12">
        <% if(result.page > 2) { %>
          <a style="float: left;" href="/articles/page/<%= result.page - 1 %>"><< Anterior</a>
        <% } else if(result.page == 2) { %>
          <a style="float: left;" href="/"><< Anterior</a>
        <% } %>
        <% if(result.next) { %>
          <a style="float: right;" href="/articles/page/<%= result.page + 1 %>">Próxima >></a>
        <% } %>
      </div>
    </div>
  </div>

  <%- include('../../partials/script'); -%>
</body>

</html>